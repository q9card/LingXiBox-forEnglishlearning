<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_withoutbackg"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logov1"
        android:supportsRtl="true"
        android:theme="@style/Theme.LXBox"
        tools:targetApi="31">
        <activity
            android:name=".controller.activity.TestActivity"
            android:exported="false" />
        <activity
            android:name=".controller.activity.RegistActivity"
            android:exported="false" />
        <activity
            android:name=".controller.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".controller.activity.SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.LXBox">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.activity.MainActivity"
            android:exported="false"/>
    </application>

</manifest>